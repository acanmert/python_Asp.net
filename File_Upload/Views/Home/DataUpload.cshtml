@model List<string>

<head>

</head>
<body>

    <form asp-controller="Home" asp-action="DataUpload" method="post" enctype="multipart/form-data">
        <div class="form-group">

            <label for="exampleFormControlFile1">Dosya Yükle</label>
            <input type="file" name="formFile" class="form-control-file" id="exampleFormControlFile1">

        </div>
        <button type="submit" class="btn btn-primary">Dosyayı Gönder</button>

        <div>
            <h2>Yüklenen Dosyalar</h2>
            <div>
                @if (Model != null)
                {

                        @foreach (var fileName in Model)
                        {
                             <button asp-controller="Home" asp-action="Suggestions" asp-route-fileName="@fileName" class="btn btn-s"> @fileName </button>
                        }
                  
                }
            </div>
        </div>
    </form>
</body>

