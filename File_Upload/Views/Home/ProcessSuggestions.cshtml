@model List<String>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        form {
            background-color: #fff;
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }

        .input-group {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

            .input-group label {
                flex: 0 0 200px;
                margin-right: 20px;
                color: #333;
            }

            .input-group input,
            .input-group select {
                flex: 1;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                outline: none;
            }

                .input-group input:focus,
                .input-group select:focus {
                    border-color: #ff5c5c;
                    box-shadow: 0 0 5px rgba(255, 92, 92, 0.5);
                }

                .input-group input[type="radio"] {
                    margin-right: 5px;
                }

            .input-group div {
                margin-right: 15px;
            }

        button {
            padding: 10px 20px;
            background-color: #ff5c5c;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            outline: none;
            transition: background-color 0.3s ease;
            align-self: flex-end;
        }

            button:hover {
                background-color: #ff4242;
            }
    </style>

</head>
<body>
    <table>
        <thead>
            <tr>
                <th>Öneri</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var suggestion in Model)
            {
                <tr>
                    <td>@suggestion</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>