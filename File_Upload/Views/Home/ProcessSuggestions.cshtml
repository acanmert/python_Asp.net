@model List<string>

<html>
<head>
    <style>
       
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        form {
            max-width: 600px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }
        h2{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 700;
            font-size:30px;
            
        }
        

       
        
        .table-container {
            max-height: 400px;
            overflow-y: auto;
            padding: 5px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            border: 1px solid #ddd;
        }

          
            .table-container tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            .table-container tr:nth-child(odd) {
                background-color: #ffffff;
            }

      
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 5px;
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-size: 20px;
            padding-top: 20px;
            padding-bottom: 20px;
        }

        .process_suggestion_form{
            margin: 0   
        }

        .header_container{
           padding: 0;
           display: flex;
           justify-content: space-between;
           align-items: center;
        }


    </style>
</head>
<body>
    <div class="header_container">
        <h2>Suggestions</h2>
        <form method="post" action="@Url.Action("Download", "Home")">
            <button type="submit" class="btn btn-primary">Download</button>
            <input type="hidden" name="data" value="@string.Join(",", Model)" />
        </form>
    </div>
       
    <div class="table-container">
        <table>
            <tbody>
                @foreach (var suggestion in Model)
                {
                    <tr>
                        <td>@suggestion </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

   
</body>
</html>
