@model List<string>

<html>
<head>
    <style>
        /* Existing styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        form {
            background-color: #fff;
            max-width: 600px;
            margin: 20px auto;
            padding: 5px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
        }
        h2{
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: 700;
            font-size:30px;
        }
        

       
        /* New styles for table container */
        .table-container {
            max-height: 400px; /* Adjust the height as needed */
            overflow-y: auto;
            padding: 5px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            background-color: #ffffff;
            border: 1px solid #ddd;
        }

            /* Apply alternating row colors to the table */
            .table-container tr:nth-child(even) {
                background-color: #f2f2f2; /* Light gray tone */
            }

            .table-container tr:nth-child(odd) {
                background-color: #ffffff; /* White background */
            }

        /* New styles for table */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 5px;
        }

        th, td {
            padding: 15px; /* Increase padding for suggestions */
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
            font-size: 20px; /* Increase font size for header */
            padding-top: 20px; /* Adjust top padding */
            padding-bottom: 20px; /* Adjust bottom padding */
        }

      
    </style>
</head>
<body>
    <h2>Suggestions</h2>
  
    <div class="table-container">
        <table>
            <tbody>
                @foreach (var suggestion in Model)
                {
                    <tr>
                        <td>@suggestion </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
